@model IEnumerable<CafeManagement.Models.Store>

<h2>Store List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Địa chỉ</th>
            <th>Số điện thoại</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StoreName</td>
                <td>@item.Address</td>
                <td>@item.Phone</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.StoreId">Sửa</a> |
                    <a asp-action="Details" asp-route-id="@item.StoreId">Chi tiết</a> |
                    <a asp-action="Delete" asp-route-id="@item.StoreId">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Thêm mới</a>